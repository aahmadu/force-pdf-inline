[
  {
    "id": 1,
    "priority": 1,
    "action": {
      "type": "redirect",
      "redirect": {
        "transform": {
          "queryTransform": {
            "addOrReplaceParams": [
              { "key": "forcedownload", "value": "0" }
            ]
          }
        }
      }
    },
    "condition": {
      "regexFilter": ".*\\.pdf.*[?&]forcedownload=1.*",
      "resourceTypes": ["main_frame", "sub_frame", "xmlhttprequest"]
    }
  },
  {
    "id": 2,
    "priority": 1,
    "action": {
      "type": "modifyHeaders",
      "responseHeaders": [
        { "header": "Content-Disposition", "operation": "set", "value": "inline" }
      ]
    },
    "condition": {
      "regexFilter": ".*\\.pdf(\\?.*)?$",
      "resourceTypes": ["main_frame", "sub_frame", "object"]
    }
  }
]

